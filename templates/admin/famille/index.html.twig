{% extends 'admin/base_admin.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-7">
            <div class="card card-primary card-success">
                <div class="card-header">
                    <h3 class="card-title ">
                        Liste des familles
                    </h3>
                </div>
                <div class="card-body">

                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>CodeFamille</th>
                            <th>Libelle</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for famille in familles %}
                            <tr>
                                <td>{{ famille.codeFamille }}</td>
                                <td>{{ famille.libelle }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card card-primary card-primary">
                <div class="card-header">
                    <h3 class="card-title ">
                        Ajouter une famille
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="float-end">
                        <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>



    {#    <a href="{{ path('app_famille_new') }}">Create new</a> #}
{% endblock %}
{% block javascript %}
<!-- DataTables  & Plugins -->
<script src="{{ asset('assets/admin/plugins/datatables/jquery.dataTables.js') }}"></script>
<script src="{{ asset('assets/admin/plugins/datatables/datatables.js') }}"></script>

	<script>

    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
             language: {
        url: '//cdn.datatables.net/plug-ins/2.0.8/i18n/fr-FR.json',
    },
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });

	</script>

{% endblock %}
