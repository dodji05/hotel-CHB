{% extends 'admin/base_table_admilte.html.twig' %}
{% block btntitle %}
Ajouter une équipement
{% endblock %}
{% block card_header_title %}
    Liste des équipements de l'hôtel
{% endblock %}

{% block btnapath %} {{ path('admin_facilities_new') }} {% endblock %}
{% block tablecontent %}
        <thead>
            <tr>

                <th>Icone</th>
                <th>Titre</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facility in facilities %}
            <tr>

                <td>{{ facility.icone }}</td>
                <td>{{ facility.Titre }}</td>

                <td>{{ facility.IsActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('admin_facilities_show', {'id': facility.id}) }}">
                        <i class="fas fa-eye">
                        </i>
                    </a>
                    <a class="btn btn-success btn-sm" href="{{ path('admin_facilities_edit', {'id': facility.id}) }}">
                        <i class="fas fa-edit">
                        </i>
                    </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

{#    <a href="{{ path('app_facilities_new') }}">Create new</a>#}
{% endblock %}
