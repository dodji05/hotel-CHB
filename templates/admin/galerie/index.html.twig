{% extends 'admin/base_admin.html.twig' %}

{% block pageTitle %} Galerie Photos{% endblock %}
{% block body %}
    <div
            class="container-fluid">
        <div
                class="row mb-2">
            <div
                    class="col-sm-6">
                {#                        <h1>{% block titles %} Departement{% endblock %}</h1> #}
            </div>
            <div
                    class="col-sm-12">

                <a href="{{ path('app_galerie_photos_new') }}" class="btn btn-outline-primary float-lg-end btnapath">
                    <i class="fa fa-plus"></i>
                    {% block btntitle %}
Ajouter des images
                    {% endblock %}
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary card-success">
                <div class="card-header">
                    <h3 class="card-title ">
                        Galerie Photos
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                    {% for photo in photos %}
                        <div class="col-sm-6 col-lg-4 col-xxl-3">
                            <div class="gallery card card-bordered">
                                <a class="gallery-image popup-image" href="{{ ('/uploads/galerie/'~photo.url ) }}">
                                    <img class="w-100 rounded-top" src="{{ ('/uploads/galerie/'~photo.url )  }}" alt="">
                                </a>
                                <div class="gallery-body card-inner align-center justify-between flex-wrap g-2">

                                    <div>
                                        {{ include('admin/galerie/_delete_form.html.twig') }}
                                        {#                                                <a href="{{ path('app_galerie_photos_delete',{'id':photo.id}) }}" class="btn btn-p-0 btn-nofocus"><em#}
                                        {#                                                            class="icon ni ni-trash-alt"></em></a>#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}
