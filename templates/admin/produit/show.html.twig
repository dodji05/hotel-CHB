<section>
    <div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title ">
        Les differents prix du produit
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
   <div class='row'>

    <div class='col-md-12'>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Services</th>
                <th>Prix</th>
            </tr>
        </thead>
            <tbody>
                <tr>
                {% for pp in produit.prixAAppliquers %}
                    <td>{{ pp.codeservice.libelle }}</td>
                <td>{{ pp.prix |number_format(0, ' ', ' ') }} Fcfa</td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
   </div>
</div>

</div>
    </section>
