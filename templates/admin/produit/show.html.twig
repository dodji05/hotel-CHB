<div class="card card-primary card-success">
    <div class="card-header">
        <h3 class="card-title ">
         Info Produit
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
   <div class='row'>
    <div class='col-md-5'>
        <img src="{{  produit.imageProduit}}" class="product-image" alt="Product Image">
    </div>
    <div class='col-md-7'>
        <table class="table table-bordered table-striped">
            <tbody>

                <tr>
                    <th>Designation</th>
                    <td>{{ produit.libprod }}</td>
                </tr>
                <tr>
                    <th>Famille</th>
                    <td>{{ produit.CodeFamille.libelle }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ produit.prixht |number_format(0, ' ', ' ')}} Fcfa</td>
                </tr>
                <tr>
{#                <th>Prix de revient</th>#}
{#                <td>{{ produit.prixrevient |number_format(0, ' ', ' ') }} Fcfa</td>#}
            </tr>


            </tbody>
        </table>
    </div>
   </div>
</div>

<div class="card-footer">

    <div class="float-end">
        <a class="btn btn-primary" type="button" href="{{ path('admin_produit_index') }}">
            <i class="fa fa-arrow-left"></i>
            Retour Ã  la liste des produit</a>

        <a class="btn btn-success" href="{{ path('admin_produit_edit', {'reference': produit.reference}) }}"><i class="fa fa-check"></i> Modifier</a>
        </a>
    </div>
</div>
</div>
</section>
