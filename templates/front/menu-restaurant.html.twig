{% extends 'front/base.html.twig' %}
{% block stylesheets %}
    <style>
        #cart-popup {
            max-width: 490px;
            background-color: transparent;
            /*background-color: wheat;*/
            position: fixed;
            top: 20%;

            transform: translate3d(0, 0, 0);
            left: 0;
            width: 80%;
            text-align: left;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }
        .cart-popup-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 90%;
            max-width: 800px;
            position: relative;
        }

        .close-popup {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close-popup:hover,
        .close-popup:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .cart-popup-products {
            list-style: none;
            padding: 0;
        }

        .cart-popup-products li {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

        .cart-popup-products img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .cart-popup-product-info {
            flex-grow: 1;
        }

        .cart-popup-product-info h4 {
            margin: 0 0 5px;
        }

        .cart-popup-product-info span {
            color: #ff6600;
            font-size: 18px !important;
            font-weight: 700 !important;
        }

        .cart-popup-total {
            display: flex;
            justify-content: space-between;
            font-size: 1.2em;
            margin-top: 20px;
        }

        .cart-popup-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .cart-popup-actions button {
            padding: 10px 20px;
            border: none;
            background-color: #ff6600;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
        }

        .cart-popup-actions button:hover {
            background-color: #e55b00;
        }

        h3 {
            display: block;

            font-weight: 700;
            margin-bottom: 5px;

            font-size: 18px;
            line-height: 25px;
        }


    </style>
{% endblock %}

