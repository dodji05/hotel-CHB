{% extends 'front/base.html.twig' %}
{% block stylesheets %}
    <style>
        .checkout-container {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .checkout-header {
            background: #0d775e;
            color: white;
            padding: 20px 30px;
            margin-bottom: 30px;
        }

        .checkout-header h4 {
            margin: 0;
            font-weight: 600;
        }

        .form-section {
            padding: 30px;
            border-bottom: 1px solid #eee;
        }

        .form-section h5 {
            color: #0d775e;
            margin-bottom: 25px;
            font-weight: 600;
            position: relative;
            padding-bottom: 10px;
        }

        .form-section h5:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 50px;
            height: 2px;
            background: #0d775e;
        }

        .form-control {
            border-radius: 4px;
            padding: 12px 15px;
            border: 1px solid #ddd;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #0d775e;
            box-shadow: 0 0 0 0.2rem rgba(13, 119, 94, 0.15);
        }

        .order-summary {
            background: #f9f9f9;
            border-radius: 8px;
            padding: 25px;
            position: sticky;
            top: 20px;
        }

        .order-summary h5 {
            color: #0d775e;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .order-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .order-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .order-total {
            font-size: 1.2em;
            font-weight: 600;
            color: #0d775e;
            margin-top: 20px;
            padding-top: 15px;
            border-top: 2px solid #eee;
        }

        .btn-validate {
            background: #0d775e;
            color: white;
            border: none;
            padding: 12px 20px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            width: 100%;
            transition: all 0.3s;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-validate:hover {
            background: #0a5f4b;
            transform: translateY(-2px);
            color: white;
        }

        .btn-outline-secondary {
            padding: 12px 20px;
            border-radius: 4px;
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

        .btn-outline-secondary:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
        }

        .form-check-input:checked {
            background-color: #0d775e;
            border-color: #0d775e;
        }

        .form-text {
            color: #6c757d;
            font-size: 0.85em;
        }

        .required-field::after {
            content: " *";
            color: #dc3545;
        }

        @media (min-width: 768px) {
            .w-100 {
                width: auto !important;
                min-width: 200px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="3"
         data-background="{{ asset('assets/front/images/slider/5.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-left caption mt-90">
                    <h4>Finalisez votre commande</h4>
                    <p class="mb-0">Veuillez compléter vos informations personnelles pour procéder au paiement</p>
                </div>
            </div>
        </div>
    </div>

    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-4">
                    <div class="checkout-container">
                        <div class="checkout-header">
                            <h4><i class="fas fa-user-circle me-2"></i>Informations personnelles</h4>
                        </div>

                        <div class="form-section">
                            {{ form_start(form) }}

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label required-field">Civilité</label>
                                    {{ form_widget(form.civilite, {'attr': {'class': 'form-select'}}) }}
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label required-field">Nom</label>
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label required-field">Prénoms</label>
                                    {{ form_widget(form.prenoms, {'attr': {'class': 'form-control', 'placeholder': 'Vos prénoms'}}) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label required-field">Téléphone</label>
                                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Votre numéro de téléphone'}}) }}
                                    <div class="form-text">Nous vous contacterons sur ce numéro pour confirmer votre commande</div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label required-field">Email</label>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre
                                    numéro de téléphone'}}) }}
                                </div>
                            </div>

                            <div class=" mb-3">
                                <label class="form-label required-field">Mode de livraison</label>
                                {{ form_widget(form.optionLivraison, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <div class="mb-3" id="adresse">
                                <label class="form-label required-field">Adresse de livraison</label>
                                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Votre adresse complète'}}) }}
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Instructions spéciales (optionnel)</label>
                                {{ form_widget(form.observations, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Des instructions particulières pour la livraison ?'}}) }}
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                <label class="form-check-label" for="termsCheck">
                                    J'accepte les <a href="#" class="text-decoration-underline">conditions générales de vente</a> et la
                                    <a href="#" class="text-decoration-underline">politique de confidentialité</a> *
                                </label>
                            </div>

                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3 mt-4 pt-3 border-top">
                                <a href="#" class="btn btn-outline-secondary btn-lg w-100 mb-2 mb-md-0">
                                    <i class="fas fa-arrow-left me-2"></i>Retour au panier
                                </a>
                                <button type="submit" class="btn btn-validate btn-lg w-100">
                                    <i class="fas fa-lock me-2"></i>Procéder au paiement
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="order-summary">
                        <h5>Récapitulatif de la commande</h5>

                        {% for produit in elements %}
                            <div class="order-item">
                                <div>
                                    <div class="fw-medium">{{ produit.object.produit.libelle }}</div>
                                    <small class="text-muted">{{ produit.quantite }} × {{ produit.object.prix|number_format(0, ' ', ' ') }} FCFA</small>
                                </div>
                                <div class="fw-medium">{{ (produit.quantite * produit.object.prix)|number_format(0, ' ', ' ') }} FCFA</div>
                            </div>
                        {% endfor %}

                        <div class="order-total d-flex justify-content-between">
                            <span>Total</span>
                            <span>{{ total|number_format(0, ' ', ' ') }} FCFA</span>
                        </div>

                        <div class="mt-4">
                            <div class="alert alert-info small mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Paiement sécurisé par nos partenaires de confiance.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        // Masquer/afficher le champ adresse en fonction du mode de livraison
        document.addEventListener('DOMContentLoaded', function() {
            const livraisonSelect = document.querySelector('select[name$="[optionLivraison]"]');
            const adresseField = document.getElementById('adresse');

            function toggleAdresseField() {
                if (livraisonSelect.value === 'livraison') {
                    adresseField.style.display = 'block';
                } else {
                    adresseField.style.display = 'none';
                }
            }

            // Initial state
            toggleAdresseField();

            // Add event listener
            livraisonSelect.addEventListener('change', toggleAdresseField);
        });
    </script>
{% endblock %}
