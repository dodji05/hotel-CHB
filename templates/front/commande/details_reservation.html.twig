{% extends 'front/base.html.twig' %}
{% block stylesheets %}
    <style>
        .cart-table {
            width: 100%;
            /*border: 1px solid rgba(0, 0, 0, 0.125);*/
            vertical-align: middle;
            border: none;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .cart-table img {
            display: block;
            max-width: 75px;
        }

        .cart-detail {
            background: #F6F6F6;
            padding: 35px 30px;
        }

        @media only screen and (max-width: 1280px) {
            .cart-detail {
