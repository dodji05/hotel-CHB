        }

        .cart-table thead th {
            font-size: 16px;
            font-weight: 700;
            padding: 0 0 20px;
            color: #24262B;
        }

        .cart-table tbody tr td {
            padding: 15px;
            font-weight: 500;
            font-size: 16px;
            border: none;

        }


        .product-item-name {
            font-size: 18px;
            /*font-family: var(--font-family-title);*/
        }

        .services .content {
            width: 100%;
            padding-left: 25px !important;
            padding-top: 0 !important;
            padding-right: 0 !important;
        }
        .room-details {
            margin-bottom: 10px;
        }
        .room-details span {
            margin-right: 20px;
        }
        .room-details span i {
            font-size: 15px;
            margin-right: 4px;
            vertical-align: middle;
        }
        .des{
            font-size: 13px;
            font-weight: 400;
            line-height: 1.75em;
            color: #666;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}
