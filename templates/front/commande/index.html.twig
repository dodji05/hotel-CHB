{% extends 'front/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .cart-container {
            padding: 40px 0;
            background-color: #f8f9fa;
        }

        .cart-header {
            margin-bottom: 30px;
            text-align: center;
        }

        .cart-header h2 {
            font-size: 2.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .cart-table {
            width: 100%;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .cart-table thead th {
            background-color: #f8f9fa;
            padding: 20px;
            font-weight: 600;
            color: #2c3e50;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .cart-item {
            border-bottom: 1px solid #eee;
            transition: all 0.3s ease;
        }

        .cart-item:hover {
            background-color: #f9f9f9;
        }

        .cart-item td {
            padding: 25px 20px;
            vertical-align: middle;
        }

        .product-info {
            display: flex;
            align-items: center;
        }

        .product-img {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            object-fit: cover;
            margin-right: 20px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .product-name {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 5px;
            font-size: 1.1rem;
        }

        .product-price {
            font-weight: 600;
            color: #e74c3c;
            font-size: 1.1rem;
        }

        .quantity-control {
            display: flex;
            align-items: center;
        }

        .quantity-btn {
            width: 32px;
            height: 32px;
            border: 1px solid #ddd;
            background: #fff;
            color: #555;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }

        .quantity-btn:hover {
            background: #f8f9fa;
        }

        .quantity-input {
            width: 50px;
            height: 32px;
            text-align: center;
            border: 1px solid #ddd;
            border-left: none;
            border-right: none;
            -moz-appearance: textfield;
        }

        .quantity-input::-webkit-outer-spin-button,
        .quantity-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .remove-item {
            color: #e74c3c;
            font-size: 1.2rem;
            transition: all 0.2s;
        }

        .remove-item:hover {
            color: #c0392b;
            transform: scale(1.1);
        }

        .cart-summary {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            margin-top: 30px;
        }

        .summary-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            font-size: 1rem;
        }

        .summary-total {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            padding-top: 15px;
            border-top: 1px solid #eee;
            margin-top: 15px;
        }

        .btn-checkout {
            width: 100%;
            padding: 12px;
            background: #e74c3c;
            color: white;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            font-size: 1rem;
            margin-top: 20px;
            transition: all 0.3s;
        }

        .btn-checkout:hover {
            background: #c0392b;
            transform: translateY(-2px);
        }

        .empty-cart {
            text-align: center;
            padding: 50px 20px;
        }

        .empty-cart i {
            font-size: 5rem;
            color: #e0e0e0;
            margin-bottom: 20px;
        }

        .empty-cart h3 {
            color: #7f8c8d;
            margin-bottom: 20px;
        }

        .btn-continue-shopping {
            display: inline-block;
            padding: 10px 25px;
            background: #3498db;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn-continue-shopping:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .cart-item td {
                padding: 15px 10px;
            }

            .product-info {
                flex-direction: column;
                align-items: flex-start;
            }

            .product-img {
                margin-bottom: 10px;
                margin-right: 0;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="banner-header section-padding valign bg-img bg-fixed" data-overlay-dark="3"
         data-background="{{ asset('assets/front/images/slider/5.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Votre Panier</h1>
                    <p>Vérifiez vos articles avant de passer commande</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container cart-container">
        {% if elements %}
            <div class="row">
                <div class="col-lg-8">
                    <div class="table-responsive">
                        <table class="cart-table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for produit in elements %}
                                    <tr class="cart-item">
                                        <td>
                                            <div class="product-info">
                                                <img src="{{ asset('assets/front/images/room/1.jpg') }}" alt="{{ produit.object.produit.libelle }}" class="product-img">
                                                <div>
                                                    <div class="product-name">{{ produit.object.produit.libelle }}</div>
                                                    <div class="text-muted">Réf: {{ produit.object.id|slice(0, 8) }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="product-price">{{ produit.object.prix|number_format(0, ' ', ' ') }} FCFA</td>
                                        <td>
                                            <div class="quantity-control">
                                                <a href="{{ path('app_order_cart_decrease', {'id': produit.object.id}) }}" class="quantity-btn">-</a>
                                                <input type="number" value="{{ produit.quantite }}" class="quantity-input" min="1" readonly>
                                                <a href="{{ path('app_order_cart_add', {'id': produit.object.id}) }}" class="quantity-btn">+</a>
                                            </div>
                                        </td>
                                        <td class="product-total">{{ (produit.quantite * produit.object.prix)|number_format(0, ' ', ' ') }} FCFA</td>
                                        <td class="text-end">
                                            <a href="{{ path('app_order_cart_supprimer', {'id': produit.object.id}) }}" class="remove-item" title="Supprimer">
                                                <i class="ti-close"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="cart-summary">
                        <h3 class="summary-title">Récapitulatif</h3>

                        <div class="summary-row">
                            <span>Sous-total</span>
                            <span>{{ total|number_format(0, ' ', ' ') }} FCFA</span>
                        </div>

                        <div class="summary-row">
                            <span>Frais de service</span>
                            <span>0 FCFA</span>
                        </div>

                        <div class="summary-row summary-total">
                            <span>Total TTC</span>
                            <span>{{ total|number_format(0, ' ', ' ') }} FCFA</span>
                        </div>

                        <a href="{{ path('app_order_check_out') }}" class="btn btn-checkout">
                            Procéder au paiement
                        </a>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_restaurant') }}" class="text-muted">
                                <i class="ti-arrow-left"></i> Continuer mes achats
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="empty-cart">
                <i class="ti-shopping-cart"></i>
                <h3>Votre panier est vide</h3>
                <p>Parcourez nos offres et ajoutez des articles à votre panier</p>
                <a href="{{ path('app_home') }}" class="btn-continue-shopping">
                    Commencer mes achats
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
